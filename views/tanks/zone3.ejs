<% layout('partials/boilerplate') %>
<div class="m-0 p-0">
  <h4 class="m-0 p-0">Note:</h4>
  <p class="m-0 p-0">Depth To Product (DPT) cannot be greater than 8.6 feet & muct be less than or equal to Depth To Water (DTW).</p>
  <p>Depth To Water (DTW) cannot be greater than 8.6 feet.</p>
</div>
<div class="row container-fluid mt-3">
  <div class="col-lg-4 offset-1">
    <div class="inputs">
      <h2 id="tank-page">Tank 3A</h2>
      <form id="tank3AInputs" class="d-flex align-items-start flex-column flex-wrap validated-form">
        <label class="form-label" for="">Depth To Product</label>
        <input type="number" step="0.01" placeholder="DTP" required/>
        <label class="form-label" for="">Depth To Water</label>
        <input type="number" step="0.01" placeholder="DTW" required/>
        <button class="btn btn-primary mt-2">Calculate</button>
      </form>
    </div>

    <div class="mt-3">
      <form action="/volumes" method="post" class="validated-form" novalidate>
        <div class="d-flex flex-wrap">
          <div class="d-flex flex-column">
            <label class="form-label" for="zone">Zone</label>
            <input class="form-control" type="number" name="zone" id="zone" value="3" min="3" max="3" required>
          </div>
          <div class="d-flex flex-column">
            <label class="form-label" for="tank">Tank</label>
            <select class="form-select" name="tank" id="tank" required>
                <option value="3A">3A</option>
            </select>
          </div> 
        </div>
        
        <label class="form-label" for="totalV">Total Volume</label>
        <input
          class="form-control"
          type="number"
          id="threeAtotal"
          name="totalV"
          step="0.01"
          min="0"
          max="17000"
          required
        />
       
        <label class="form-label" for="waterV">Water Volume</label>
        <input
          class="form-control"
          type="number"
          id="threeAwater"
          name="waterV"
          step="0.01"
          min="0"
          max="17000"
          required
        />
        
        <label class="form-label" for="productV">Product Volume</label>
        <input
          class="form-control"
          type="number"
          id="threeAproduct"
          name="productV"
          step="0.01"
          min="0"
          max="17000"
          required
        />

        <button class="btn btn-success mt-3">Submit</button>
      </form>
    </div>
  </div>

<!--Tank 3B Below-->

  <div id="tank-v-container" class="col-lg-4 offset-1">
