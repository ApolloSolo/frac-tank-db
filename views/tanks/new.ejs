    <body>
        <h1>Add A Product</h1>

        <div class="inputs">
            <form id="tank1AInputs" class="flex">
                <input type="number" step="0.01" placeholder="DTP">
                <input type="number" step="0.01" placeholder="DTW">
                <button class="btn btn-primary">Calculate</button>
            </form>
        </div>


        <div>
            <form action='/volumes' method="post">
                <label for="zone">Zone</label>
                <input type="number" name="zone" id="zone" min="1" max="3">
                <br>
                <label for="tank">Tank: </label>
                <select name="tank" id="tank">
                    <option value="1A">1A</option>
                    <option value="1B">1B</option>
                    <option value="2A">2A</option>
                    <option value="2B">2B</option>
                    <option value="3A">3A</option>
                    <option value="3B">3B</option>
                </select>
                <br>
                <label for="totalV">Total Volume</label>
                <input type="number" id="oneAtotal" name="totalV" step="0.01" min="0" max="17000">
                <br>
                <label for="waterV">Water Volume</label>
                <input type="number" id="oneAwater" name="waterV" step="0.01" min="0" max="17000">
                <br>
                <label for="productV">Product Volume</label>
                <input type="number" id="oneAproduct" name="productV" step="0.01" min="0" max="17000">

                
                
                <button>Submit</button>
            </form>
        </div>

        <div class="inputs">
            <form id="tank1BInputs" class="flex">
                <input type="number" step="0.01" placeholder="DTP">
                <input type="number" step="0.01" placeholder="DTW">
                <button class="btn btn-primary">Calculate</button>
            </form>
        </div>


        <div>
            <form action='/volumes' method="post">
                <label for="zone">Zone</label>
                <input type="number" name="zone" id="zone" min="1" max="3">
                <br>
                <label for="tank">Tank: </label>
                <select name="tank" id="tank">
                    <option value="1A">1A</option>
                    <option value="1B">1B</option>
                    <option value="2A">2A</option>
                    <option value="2B">2B</option>
                    <option value="3A">3A</option>
                    <option value="3B">3B</option>
                </select>
                <br>
                <label for="totalV">Total Volume</label>
                <input type="number" id="oneBtotal" name="totalV" step="0.01" min="0" max="17000">
                <br>
                <label for="waterV">Water Volume</label>
                <input type="number" id="oneBwater" name="waterV" step="0.01" min="0" max="17000">
                <br>
                <label for="productV">Product Volume</label>
                <input type="number" id="oneBproduct" name="productV" step="0.01" min="0" max="17000">
                
                <button>Submit</button>
            </form>
        </div>

        <a href="/volumes">Back</a>
        
        
