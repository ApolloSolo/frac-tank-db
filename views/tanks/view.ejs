<% layout('partials/boilerplate') %>

<h1>Zone-<%=volumes[0].zone%> Volume Data</h1>
<div class="d-flex justify-content-center gap-3">
  <a href="/volumes/<%=volumes[0].zone%>/new"
    ><button class="btn btn-primary">Add Volume</button></a
  >
  <button class="btn btn-info" id="csv-btn" type="button">Download CSV</button>
</div>

<div class="d-flex justify-content-evenly mt-5 flex-wrap">
  <div class="">
    <h2 class="text-center"><%=volumes[0].zone%>A</h2>

    <table class="table table-bordered table-dark">
      <thead>
        <tr>
          <th scope="col">Edit</th>
          <th scope="col">Date</th>
          <th scope="col">Time</th>
          <th scope="col">Total</th>
          <th scope="col">Water</th>
          <th scope="col">Product</th>
        </tr>
      </thead>
      <tbody>
        <%for(let v of volumes){%> <%if(v.tank[1] === "A"){%>
        <tr>
          <% if(currentUser.isAdmin){ %>
          <th scope="row">
            <a href="/volumes/<%=v._id%>/edit"><%=v.tank%></a>
          </th>
          <% } %> <% if(!currentUser.isAdmin){ %>
          <th scope="row"><%=v.tank%></th>
          <% } %>
          <td><%=formatDate(v.created_at)%></td>
          <td><%=formatTime(v.created_at - 14400000)%></td>
          <td><%=v.totalV%></td>
          <td><%=v.waterV%></td>
          <td><%=v.productV%></td>
        </tr>
        <%}%> <%}%>
      </tbody>
    </table>
  </div>

  <div class="">
    <h2 class="text-center"><%=volumes[0].zone%>B</h2>
    <table class="table table-bordered table-dark">
      <thead>
        <tr>
          <th scope="col">Edit</th>
          <th scope="col">Date</th>
          <th scope="col">Time</th>
          <th scope="col">Total</th>
          <th scope="col">Water</th>
          <th scope="col">Product</th>
        </tr>
      </thead>
      <tbody>
        <%for(let v of volumes){%> <%if(v.tank[1] === "B"){%>
        <tr>
          <% if(currentUser.isAdmin){ %>
          <th scope="row">
            <a href="/volumes/<%=v._id%>/edit"><%=v.tank%></a>
          </th>
          <% } %> <% if(!currentUser.isAdmin){ %>
          <th scope="row"><%=v.tank%></th>
          <% } %>
          <td><%=formatDate(v.created_at)%></td>
          <td><%=formatTime(v.created_at - 14400000)%></td>
          <td><%=v.totalV%></td>
          <td><%=v.waterV%></td>
          <td><%=v.productV%></td>
        </tr>
        <%}%> <%}%>
      </tbody>
    </table>
  </div>
</div>
